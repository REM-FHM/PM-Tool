<p id="notice"><%= notice %></p>
<%project = Project.find_by_id(@work_breakdown_structure.p_id) %>
<h1>
	<%= project.name+'-WBS' %>
	<%= link_to 'Zurück', work_breakdown_structure_path, :id=>'btn', :class=> 'btn btn-sm btn-primary pull-right'%>
</h1>
      

<html>
  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {packages:["orgchart"]});
      google.charts.setOnLoadCallback(drawChart);
      

      function drawChart() {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Name');
        data.addColumn('string', 'Vorgänger');
        data.addColumn('string', 'Paket');

        // For each orgchart box, provide the name, manager, and tooltip to show.
        data.addRows([

          ['Web-Shop','','Gesamtaufgabe'],
          ['Projektmanagement','Web-Shop','Aufgabe'],
          ['Definition und Entwurf','Web-Shop','Aufgabe'],
          ['Geschäftsmodellierung','Projektmanagement','Teilaufgabe'],
          ['Projektplanung','Projektmanagement','Teilaufgabe'],
          ['Wirtschaftlichkeitsrechnung erstellen','Geschäftsmodellierung','Arbeitspaket'],
          ['Lastenheft erstellen', 'Geschäftsmodellierung', 'Arbeitspaket'],
          ['Ablauf- und Terminplanung', 'Projektplanung', 'Arbeitspaket'],
          ['Einsatzmittel- und Kostenplanung', 'Projektplanung', 'Arbeitspaket'],
          ['Funktionale Architektur', 'Definition und Entwurf', 'Teilaufgabe'],
          ['Funtionen- und GUI-Modellierung', 'Funktionale Architektur', 'Arbeitspaket'],
          ['Prozess- und Datenmodellierung', 'Funktionale Architektur', 'Arbeitspaket'],
           ]);

        data.setRowProperty(2, 'style', 'border: 0px');
        // Create the chart.
        var chart = new google.visualization.OrgChart(document.getElementById('chart_div'));
        // Draw the chart, setting the allowHtml option to true for the tooltips.
        var options = {allowHtml:true, color:'#ffedf7'};

        chart.draw(data, options);
      }
   </script>
    </head>
  <body>
    <div id="chart_div"></div>
  </body>
</html>
